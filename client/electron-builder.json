{
  "appId": "com.local-sidekick.app",
  "productName": "Local Sidekick",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "extraResources": [
    {
      "from": "build-engine/python",
      "to": "python",
      "filter": ["**/*"]
    },
    {
      "from": "build-engine/engine",
      "to": "engine",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64"]
      }
    ],
    "icon": "public/icon.png",
    "category": "public.app-category.productivity",
    "identity": null
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
